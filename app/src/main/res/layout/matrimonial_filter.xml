<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/candidatesearch_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:textSize="14dp"
                android:hint="Name"/>
            <EditText
                android:id="@+id/candidatesearch_nativeplace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:textSize="14dp"
                android:hint="Native Place"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/candidatesearch_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:entries="@array/gender"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/candidatesearch_nri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:entries="@array/nri"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/candidatesearch_agefrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="Age From"/>
            <EditText
                android:id="@+id/candidatesearch_ageto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="Age To"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/candidatesearch_button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:background="@drawable/rounded_corners"
                android:textColor="@color/white"
                android:text="Search"/>
            <Button
                android:id="@+id/candidatesearch_register"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#18ba60"
                android:background="@drawable/rounded_corners"
                android:text="Register Now!"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>